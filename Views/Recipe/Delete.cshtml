@model RecipeBook.Models.Recipe

<h1>Delete</h1>
<form method="post" asp-action="DeletePost">
    <div asp-validation-summary="All" />
    <input name="key" asp-for="Id" hidden />
    <span>The record for recipe @Model.Title will be deleted</span>
    <input type="submit" class="btn btn-primary" />
</form>